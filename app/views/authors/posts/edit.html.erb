<div class="row mb-3">
  <div class="card">
    <div class="card-body">
      <h4 class="card-title">Editing post</h4>
      <%= render "form", post: @post %>
    </div>    
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col ms-1">
      <%= link_to 'Back to posts', posts_path, class: 'btn btn-secondary' %>
    </div>
    <div class="col me-1 d-md-flex justify-content-md-end">
      <%= button_to "Destroy this post", @post, method: :delete, class: "btn
      btn-danger " %>
    </div>
  </div>
</div>